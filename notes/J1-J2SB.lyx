\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\chi_{\mu\nu}(\bm{q};i\omega_{n}) & =-\frac{1}{\mathcal{N}}\int_{0}^{\beta}\dd\tau\sum_{i}e^{i(\omega_{n}\tau-\bm{q}\cdot\bm{x}_{i})}\expval{\mathcal{T}_{\tau}[S_{\mu}(\bm{x}_{i},\tau)S_{\nu}(0,0)]}\\
 & =-\frac{1}{4\mathcal{N}}\int_{0}^{\beta}\dd\tau\sum_{i}e^{i(\omega_{n}\tau-\bm{q}\cdot\bm{x}_{i})}\expval{\mathcal{T}_{\tau}[b_{\bm{i}\sigma}^{\tau\dagger}\sigma_{\sigma\sigma'}^{\mu}b_{\bm{i}\sigma'}^{\tau}b_{0\eta}^{0\dagger}\sigma_{\eta\eta'}^{\nu}b_{0\eta'}^{0}]}\\
 & =-\frac{1}{\mathcal{N}}\int_{0}^{\beta}\dd\tau\sum_{i}e^{i(\omega_{n}\tau-\bm{q}\cdot\bm{x}_{i})}\bigg(\frac{\delta^{2}\ln Z}{\delta j_{\bm{i}}^{\tau\mu}\delta j_{0}^{0\nu}}\bigg|_{j=0}+\frac{1}{Z}\frac{\delta\ln Z}{\delta j_{1}^{\tau\mu}}\bigg|_{j=0}\frac{1}{Z}\frac{\delta\ln Z}{\delta j_{0}^{0\nu}}\bigg|_{j=0}\bigg)\\
 & =-\frac{1}{\mathcal{N}}\int_{0}^{\beta}\dd\tau\sum_{i}e^{i(\omega_{n}\tau-\bm{q}\cdot\bm{x}_{i})}\frac{\delta^{2}\ln Z}{\delta j_{\bm{i}}^{\tau\mu}\delta j_{0}^{0\nu}}\bigg|_{j=0}+\expval{S_{\mu}}\expval{S_{\nu}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\expval{...}$
\end_inset

 represents the 
\emph on
ensemble average
\emph default
.
 The second term corresponds to the ensemble average of single spin operators,
 which is non-zero when the symmetry in the ground state is broken.
 This term accounts for the observed elastic Bragg peak in neutron scattering.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\chi_{\mu\nu}(\bm{q};i\omega_{n}) & =-\frac{1}{\mathcal{N}}\int_{0}^{\beta}\dd\tau\sum_{i}e^{i(\omega_{n}\tau-\bm{q}\cdot\bm{x}_{i})}\frac{\delta^{2}\ln Z}{\delta j_{\bm{i}}^{\tau\mu}\delta j_{0}^{0\nu}}\bigg|_{j=0}+\expval{S_{\mu}}\expval{S_{\nu}}\\
 & =-\frac{\delta^{2}\ln Z}{\delta j_{\bm{q}}^{i\omega_{n},\mu}\delta j_{-\bm{q}}^{-i\omega_{n},\nu}}\bigg|_{j=0}+\expval{S_{\mu}}\expval{S_{\nu}}\\
 & =\frac{1}{Z[j=0]}\int\mathcal{D}[\phi,\bar{\phi}]\bigg(\frac{\delta^{2}\mathcal{S}_{\text{eff}}}{\delta j_{\bm{q}}^{i\omega_{n},\mu}\delta j_{-\bm{q}}^{-i\omega_{n},\nu}}\bigg|_{j=0}-\frac{\delta\mathcal{S}_{\text{eff}}}{\delta j_{\bm{q}}^{i\omega_{n},\mu}}\frac{\delta\mathcal{S}_{\text{eff}}}{\delta j_{-\bm{q}}^{-i\omega_{n},\nu}}\bigg|_{j=0}\bigg)e^{-\mathcal{S}_{\text{eff}}}
