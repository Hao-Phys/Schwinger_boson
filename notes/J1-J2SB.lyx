\begin_layout Standard
Consider 
\begin_inset Formula $\chi_{\mu\nu}^{\text{{\rom{1},sp}}}(\bm{q},i\omega_{n})$
\end_inset

 :
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\chi_{\mu\nu}^{\text{{\rom{1},sp}}}(\bm{q},i\omega_{n}) & =-\frac{1}{64\mathcal{N}\beta}\sum_{\bm{k}}\sum_{\omega}\Tr\big[\mathcal{G}_{\bm{k}+\bm{q},i(\omega+\omega_{n})}^{\text{sp}}\hat{u}^{\mu}\mathcal{G}_{\bm{k},i\omega}^{\text{sp}}\hat{u}^{\nu}\big]\\
 & =-\frac{1}{64\mathcal{N}\beta}\sum_{\bm{k}}\sum_{\omega}\sum_{\sigma\sigma'}\Tr\bigg\{\bigg(\frac{g_{\bm{k}+\bm{q}}^{+\sigma}\hat{u}^{\mu}}{i\omega+i\omega_{n}+\epsilon_{\bm{k}+\bm{q},\sigma}}+\frac{g_{\bm{k}+\bm{q}}^{-\sigma}\hat{u}^{\mu}}{i\omega+i\omega_{n}-\epsilon_{\bm{k}+\bm{q},\sigma}}\bigg)\\
 & *\bigg(\frac{g_{\bm{k}}^{+\sigma'}\hat{u}^{\nu}}{i\omega+\epsilon_{\bm{k},\sigma'}}+\frac{g_{\bm{k}}^{-\sigma'}\hat{u}^{\nu}}{i\omega-\epsilon_{\bm{k},\sigma'}}\bigg)\bigg\}\\
 & =-\frac{1}{64\mathcal{N}\beta}\sum_{\bm{k}}\sum_{\sigma\sigma'}\sum_{\omega}\bigg\{\frac{\Tr\big[g_{\bm{k}+\bm{q}}^{+\sigma}\hat{u}^{\mu}g_{\bm{k}}^{+\sigma'}\hat{u}^{\nu}\big]}{(i\omega+i\omega_{n}+\epsilon_{\bm{k}+\bm{q},\sigma})(i\omega+\epsilon_{\bm{k},\sigma'})}+\frac{\Tr\big[g_{\bm{k}+\bm{q}}^{-\sigma}\hat{u}^{\mu}g_{\bm{k}}^{-\sigma'}\hat{u}^{\nu}\big]}{(i\omega+i\omega_{n}-\epsilon_{\bm{k}+\bm{q},\sigma})(i\omega-\epsilon_{\bm{k},\sigma'})}\\
 & +\frac{\Tr\big[g_{\bm{k}+\bm{q}}^{+\sigma}\hat{u}^{\mu}g_{\bm{k}}^{-\sigma'}\hat{u}^{\nu}\big]}{(i\omega+i\omega_{n}+\epsilon_{\bm{k}+\bm{q},\sigma})(i\omega-\epsilon_{\bm{k},\sigma'})}+\frac{\Tr\big[g_{\bm{k}+\bm{q}}^{-\sigma}\hat{u}^{\mu}g_{\bm{k}}^{+\sigma'}\hat{u}^{\nu}\big]}{(i\omega+i\omega_{n}-\epsilon_{\bm{k}+\bm{q},\sigma})(i\omega+\epsilon_{\bm{k},\sigma'})}\bigg\}
