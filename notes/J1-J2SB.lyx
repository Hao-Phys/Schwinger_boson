\begin_layout Title
Dynamical structure factor:
\begin_inset Formula $J_{1}$
\end_inset

-
\begin_inset Formula $J_{2}$
\end_inset

 triangular lattice antiferromagnetic model
\end_layout

\begin_layout Author
Hao Zhang
\end_layout

\begin_layout Date
July, 2018
\end_layout

\begin_layout Section
Introduction
\end_layout

\begin_layout Standard
We consider the triangular lattice 
\begin_inset Formula $S=1/2$
\end_inset

 Heisenberg model in the presence of nearest neighbor (NN) 
\begin_inset Formula $J_{1}$
\end_inset

 and next nearest neighbor (NNN) 
\begin_inset Formula $J_{2}$
\end_inset

 antiferromagnetic couplings,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{H}=J_{1}\sum_{\bm{i},\bm{\delta}_{1}>0}\bm{S}_{\bm{i}}\cdot\bm{S}_{\bm{i}+\bm{\delta}_{1}}+J_{2}\sum_{\bm{i},\bm{\delta}_{2}>0}\bm{S}_{\bm{i}}\cdot\bm{S}_{\bm{i}+\bm{\delta}_{2}}\label{eq:hham}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We will use the Schwinger boson method including Gaussian fluctuations to
 calculate the dynamical structure factor of this model.
 To reproduce realistic spin dynamics of a symmetry-broken ground state,
 we introduce a small symmetry breaking field in 
\begin_inset Formula $x-y$
\end_inset

 plane and take thermodynamic limit at the end of the calculation,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\bm{h}_{\bm{i}}=(h\cos(\bm{Q}\cdot\bm{r}_{\bm{i}}),h\sin(\bm{Q}\cdot\bm{r}_{\bm{i}}),0)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\bm{Q}$
\end_inset

 is the order parameter of the symmetry-broken ground state.
 For 
\begin_inset Formula $2\pi/3$
\end_inset

 -phase of triangular lattice, 
\begin_inset Formula $\bm{Q}=(\frac{2\pi}{3},\frac{2\pi}{\sqrt{3}})$
\end_inset

 .
 
\end_layout

\begin_layout Section
Path integral formalism
\end_layout

\begin_layout Subsection
Spin representation
\end_layout

\begin_layout Standard
We introduce the Schwinger boson representation of spin operators 
\begin_inset Formula $\bm{S}_{\bm{i}}$
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
S_{\bm{i}}^{+} & =b_{\bm{i}\uparrow}^{\dagger}b_{\bm{i}\downarrow}\nonumber \\
S_{\bm{i}}^{-} & =b_{\bm{i}\downarrow}^{\dagger}b_{\bm{i}\uparrow}\nonumber \\
S_{\bm{i}}^{z} & =\frac{1}{2}(b_{\bm{i}\uparrow}^{\dagger}b_{\bm{i}\uparrow}-b_{\bm{i}\downarrow}^{\dagger}b_{\bm{i}\downarrow})
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The physical subspace of the Fock space formed by Schwinger bosons must
 have well-defined spin size:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\sum_{\sigma}b_{\bm{i}\sigma}^{\dagger}b_{\bm{i}\sigma}=2S=1\quad\sigma=\uparrow,\downarrow\label{eq:constraint}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The Heisenberg interactions of 
\begin_inset Formula $J_{1}-J_{2}$
\end_inset

 model can be expressed in terms of 
\series bold
six
\series default
 pairs of 
\shape italic
bond operators
\shape default
:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\bm{S}_{\bm{i}}\cdot\bm{S}_{\bm{i}+\bm{\delta}}=-A_{\bm{i},\bm{\delta}}^{\dagger}A_{\bm{i},\bm{\delta}}+:B_{\bm{i},\bm{\delta}}^{\dagger}B_{\bm{i},\bm{\delta}}:
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\bm{\delta}=\bm{\delta}_{1},\bm{\delta}_{2}$
\end_inset

, and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
A_{\bm{i},\bm{\delta}} & =\frac{1}{2}(b_{\bm{i}\uparrow}b_{\bm{i}+\bm{\delta}\downarrow}-b_{\bm{i}\downarrow}b_{\bm{i}+\bm{\delta}\uparrow})\nonumber \\
B_{\bm{i},\bm{\delta}} & =\frac{1}{2}(b_{\bm{i}\uparrow}b_{\bm{i}+\bm{\delta}\uparrow}^{\dagger}+b_{\bm{i}\downarrow}b_{\bm{i}+\bm{\delta}\downarrow}^{\dagger})
\end{align}

\end_inset


\end_layout

