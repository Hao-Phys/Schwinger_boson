\begin_inset Formula 
\begin{align}
\sum_{\bm{k}}\sum_{\omega}\Tr\big[\mathcal{G}_{\bm{k},i\omega}\hat{u}^{x}\big] & =2\sum_{\bm{k}}\sum_{\omega}\sum_{\sigma}\bigg\{\bigg(\frac{1}{i\omega+\epsilon_{\bm{k},\sigma}}-\frac{1}{i\omega-\epsilon_{\bm{k},\sigma}}\bigg)(B_{\bm{k},\sigma}+F_{\bm{k},\sigma})\bigg\}\\
