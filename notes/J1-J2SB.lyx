\color blue
....................................
 The physical meaning of the bond operator needs to be added ..............................................
\end_layout

\begin_layout Subsection
The generating Hamiltonian
\end_layout

\begin_layout Standard
The generating Hamiltonian is defined by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{H}[j,h]=\mathcal{H}-\frac{1}{2}\sum_{\bm{i}}\sum_{\sigma\sigma'}j_{\bm{i}}^{\tau\mu}b_{\bm{i}\sigma}^{\tau\dagger}\sigma_{\sigma\sigma'}^{\mu}b_{\bm{i}\sigma'}^{\tau}+\mathcal{H}_{h}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $j_{\bm{i}}^{\tau\mu}$
\end_inset

 represents the external current coupled with the spin component 
\begin_inset Formula $S^{\mu}=\frac{1}{2}\sigma^{\mu}$
\end_inset

 at space 
\begin_inset Formula $\bm{i}$
\end_inset

 and imaginary-time 
\begin_inset Formula $\tau$
\end_inset

.
 The Zeeman energy of the spin operators with the symmetry breaking field
 is given by 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{H}_{h} & =-\sum_{i}\bm{h}_{\bm{i}}\cdot\bm{S}_{\bm{i}}\nonumber \\
 & =-\frac{1}{2}\sum_{\bm{i}}\bm{h}_{\bm{i}}\cdot\bm{\sigma}_{\bm{i}}\\
 & =-\frac{h}{2}\sum_{\bm{i}}\cos(\bm{Q}\cdot\bm{r}_{\bm{i}})\sigma_{\bm{i}}^{x}+\sin(\bm{Q}\cdot\bm{r}_{\bm{i}})\sigma_{\bm{i}}^{y}\nonumber \\
 & =-\frac{h}{2}\sum_{\bm{i}}e^{-i\bm{Q}\cdot\bm{r}_{\bm{i}}}b_{{\bm{i}}\uparrow}^{\dagger}b_{{\bm{i}}\downarrow}+e^{i\bm{Q}\cdot\bm{r}_{\bm{i}}}b_{{\bm{i}}\downarrow}^{\dagger}b_{{\bm{i}}\uparrow}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The Schwinger boson representation introduces an extra local 
\begin_inset Formula $U(1)$
\end_inset

 
\shape italic
gauge
\shape default
 symmetry in the model, as evident by 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:constraint"
plural "false"
caps "false"
noprefix "false"

\end_inset

, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
b_{\bm{i}\sigma}^{\tau}\rightarrow b_{\bm{i}\sigma}^{\tau}e^{i\theta_{\bm{i}}^{\tau}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We can exploit this property to simplify the Zeeman energy.
 Performing the following gauge transforms:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
b_{\bm{i}\uparrow}^{\tau} & \rightarrow e^{-i\frac{\bm{Q\cdot\bm{r}_{i}}}{2}}b_{\bm{i}\uparrow}^{\tau}\nonumber \\
b_{\bm{i}\downarrow}^{\tau} & \rightarrow e^{i\frac{\bm{Q\cdot\bm{r}_{i}}}{2}}b_{\bm{i}\downarrow}^{\tau}\label{eq:gaugetrans}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The Zeeman energy now takes the form:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{H}_{h}\rightarrow-\frac{h}{2}\sum_{\bm{i}}b_{{\bm{i}}\uparrow}^{\dagger}b_{{\bm{i}}\downarrow}+b_{{\bm{i}}\downarrow}^{\dagger}b_{{\bm{i}}\uparrow}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
The generating functional
\end_layout

\begin_layout Standard
The generating functional of boson coherent states path integral is given
 by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
Z[j,h] & =\Tr P_{S}T_{\tau}\bigg[\exp\bigg(-\int_{0}^{\beta}d\tau\mathcal{H}[j,h]\bigg)\bigg]\nonumber \\
 & =\lim_{\epsilon\rightarrow0}\Tr T_{\tau}\prod_{n=0}^{N_{\epsilon}-1}\big[P_{S}^{\tau_{n}}\exp(-\epsilon\mathcal{H}[j(\tau_{n}),h])\big]
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\epsilon=\beta/N_{\epsilon}$
\end_inset

 is the imaginary time step, and 
\begin_inset Formula $\tau_{n}=n\epsilon$
\end_inset

 is the discrete imaginary time.
 
\begin_inset Formula $P_{S}$
\end_inset

 is the projector to enforce the constraint 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:constraint"
plural "false"
caps "false"
noprefix "false"

\end_inset

: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
P_{S} & =\prod_{\bm{i}}\bigg\{\frac{1}{2\pi}\int_{-\pi}^{\pi}\dd\lambda_{\bm{i}}\exp\bigg(-i\lambda_{\bm{i}}(\sum_{\sigma}b_{\bm{i}\sigma}^{\dagger}b_{\bm{i}\sigma}-2S)\bigg)\\
 & =\lim_{\epsilon\rightarrow0}\prod_{\bm{i}}\epsilon\int_{-\pi/\epsilon}^{\pi/\epsilon}\frac{\dd\lambda_{\bm{i}}^{\tau_{n}}}{2\pi}\exp\bigg(-i\epsilon\lambda_{\bm{i}}^{\tau_{n}}(\sum_{\sigma}b_{\bm{i}\sigma}^{\tau_{n}\dagger}b_{\bm{i}\sigma}^{\tau_{n}}-2S)\bigg)
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The projector projects out all the unphysical cases: the exponential factor
 oscillates very fast when the system deviates from the physical subspace,
 leading to a cancelling of phases.
 The constraint must be satisfied at 
\emph on
every
\emph default
 single time.
 In the second step, we have introduced the variable 
\begin_inset Formula $\epsilon\lambda_{\bm{i}}^{\tau_{n}}=\lambda_{\bm{i}}$
\end_inset

 to display the explicit time-dependence.
 In this way, the effect of the projector is incorporated into the path
 integral.
 
\end_layout

\begin_layout Standard
The resolution of identity of boson coherent states is
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathbb{I}=\int\dd^{2}\vb{b}e^{-\bar{{\vb{b}}}\vb{b}}\ket{\vb{b}}\bra{\vb{b}}\label{eq:roi}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\vb{b}=(b_{1\sigma},...,b_{\mathcal{N}\sigma})$
\end_inset

 is a 
\begin_inset Formula $2\mathcal{N}$
\end_inset

-dimensional (
\begin_inset Formula $\sigma=\uparrow,\downarrow)$
\end_inset

 vector living in the parameter space of boson coherent states.
 The integration measure is defined as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\int\dd^{2}\vb{b}\equiv\int_{-\infty}^{\infty}\prod_{\bm{i}\sigma}\frac{\dd(\Re b_{\bm{i}\sigma})\dd(\Im b_{\bm{i}\sigma})}{\pi}=\int_{-\infty}^{\infty}\prod_{\bm{i}\sigma}\frac{\text{d}\bar{b}_{\bm{i}\sigma}\text{d}b_{\bm{i}\sigma}}{2\pi i}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $b_{\bm{i}\sigma}=\Re b_{\bm{i}\sigma}+i\Im b_{\bm{i}\sigma}$
\end_inset

 and 
\begin_inset Formula $\bar{b}{}_{\bm{i}\sigma}=\Re b_{\bm{i}\sigma}-i\Im b_{\bm{i}\sigma}$
\end_inset

 , and 
\begin_inset Formula $\dd(\Re b_{\bm{i}\sigma})\dd(\Im b_{\bm{i}\sigma})=\mathcal{J}\text{d}\bar{b}_{\bm{i}\sigma}\text{d}b_{\bm{i}\sigma}$
\end_inset

 , and 
\begin_inset Formula $\mathcal{J}=1/(2i)$
\end_inset

 is the Jacobian.
 The trace of an operator can be calculated by using the boson coherent
 states,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\Tr\mathcal{O} & =\sum_{n}\bra{n}\mathcal{O}\ket{n}\\
 & =\int\dd^{2}\vb{b}e^{-\bar{{\vb{b}}}\vb{b}}\sum_{n}\bra{n}\ket{\vb{b}}\bra{\vb{b}}\mathcal{O}\ket{n}\\
 & =\int\dd^{2}\vb{b}e^{-\bar{{\vb{b}}}\vb{b}}\bra{\vb{b}}\mathcal{O}\ket{\vb{b}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The generating functional can now be written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
Z[j,h] & =T_{\tau}\int\dd^{2}\vb{b}^{0}e^{-\bar{\vb{b}}^{0}\vb{b}^{0}}\bra{\vb{b}^{0}}\lim_{\epsilon\rightarrow0}\prod_{n=0}^{N_{\epsilon}-1}\prod_{i}\epsilon\int\dd\lambda_{i}\exp\bigg[-\epsilon\bigg(\mathcal{H}[j(\tau_{n}),h]+\lambda_{i}^{\tau_{n}}(\sum_{\sigma}b_{\bm{i}\sigma}^{\tau_{n}\dagger}b_{\bm{i}\sigma}^{\tau_{n}}-2S)\bigg)\bigg]\ket{\vb{b}^{0}}\\
 & =T_{\tau}\int\dd^{2}\vb{b}^{0}e^{-\bar{\vb{b}}^{0}\vb{b}^{0}}\bra{\vb{b}^{0}}\lim_{\epsilon\rightarrow0}\prod_{n=0}^{N_{\epsilon}-1}\prod_{i}\epsilon\int\dd\lambda_{i}\bigg[1-\epsilon\bigg(\mathcal{H}[j(\tau_{n}),h]+\lambda_{i}^{\tau_{n}}(\sum_{\sigma}b_{\bm{i}\sigma}^{\tau_{n}\dagger}b_{\bm{i}\sigma}^{\tau_{n}}-2S)\bigg)+\mathcal{O}(\epsilon^{2})\bigg]\ket{\vb{b}^{0}}\\
 & =T_{\tau}\int\dd^{2}\vb{b}^{0}e^{-\bar{\vb{b}}^{0}\vb{b}^{0}}\bra{\vb{b}^{0}}\lim_{\epsilon\rightarrow0}\prod_{\tau=0}^{\beta-\epsilon}\prod_{i}\epsilon\int\dd\lambda_{i}\bigg[1-\epsilon\bigg(\mathcal{H}[j(\tau),h]+\lambda_{i}^{\tau}(\sum_{\sigma}b_{\bm{i}\sigma}^{\tau\dagger}b_{\bm{i}\sigma}^{\tau}-2S)\bigg)+\mathcal{O}(\epsilon^{2})\bigg]\ket{\vb{b}^{0}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We insert 
\begin_inset Formula $N_{\epsilon}-1$
\end_inset

 resolution of identity 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:roi"
plural "false"
caps "false"
noprefix "false"

\end_inset

 in the above path integral, and use periodic boundary condition
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\vb{b}^{0}=\vb{b}^{\beta}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The process of evaluating the path integral takes care of the time-ordering
 automatically,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
Z[j,h] & =\lim_{\epsilon\rightarrow0}\prod_{\tau}\int\dd^{2}\vb{b}^{\tau}e^{-\bar{{\vb{b}}}^{\tau}\vb{b}^{\tau}}\prod_{\tau=0}^{\beta-\epsilon}\bra{\vb{b}^{\tau+\epsilon}}\epsilon\prod_{i}\int\dd\lambda_{i}\bigg[1-\epsilon\bigg(\mathcal{H}[j(\tau),h]+\lambda_{i}^{\tau}(\sum_{\sigma}b_{\bm{i}\sigma}^{\tau\dagger}b_{\bm{i}\sigma}^{\tau}-2S)\bigg)+\mathcal{O}(\epsilon)\bigg]\ket{\vb{b}^{\tau}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
We will use the following properties of boson coherent states,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
b_{i\sigma}^{\tau}\ket{\vb{b}} & =b_{i\sigma}^{\tau}\ket{\vb{b}}\nonumber \\
\bra{\vb{b}}b_{i\sigma}^{\tau\dagger} & =\bra{\vb{b}}\bar{b}_{i\sigma}^{\tau}\\
\bra{\vb{b}}\ket{\vb{b}'} & =e^{\bar{\vb{b}}\vb{b}'}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The generating functional is now written as:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
Z[j] & \simeq\lim_{\epsilon\rightarrow0}\prod_{\tau}\int\dd^{2}\vb{b}^{\tau}e^{-\bar{{\vb{b}}}^{\tau}\vb{b}^{\tau}}\prod_{\tau=0}^{\beta-\epsilon}\epsilon\prod_{\bm{i}}\int\dd\lambda_{\bm{i}}^{\tau}\bigg[\bra{\vb{b}^{\tau+\epsilon}}\ket{\vb{b}^{\tau}}-\epsilon\bigg(H[j(\tau),h]+\lambda_{\bm{i}}^{\tau}(\sum_{\sigma}\bar{b}_{\bm{i}\sigma}^{\tau}b_{\bm{i}\sigma}^{\tau}-2S)\bigg)\bra{\vb{b}^{\tau}}\ket{\vb{b}^{\tau}}\bigg]\nonumber \\
 & =\lim_{\epsilon\rightarrow0}\prod_{\tau}\int\dd^{2}\vb{b}^{\tau}e^{-\bar{{\vb{b}}}^{\tau}\vb{b}^{\tau}}\prod_{\tau=0}^{\beta-\epsilon}\epsilon\prod_{\bm{i}}\int\dd\lambda_{\bm{i}}^{\tau}\bigg[e^{\bar{\vb{b}}^{\tau+\epsilon}(\vb{b}^{\tau+\epsilon}-\epsilon\partial_{\tau}\vb{b}^{\tau+\epsilon})}-\epsilon\bigg(H[j(\tau),h]+\lambda_{\bm{i}}^{\tau}(\sum_{\sigma}\bar{b}_{\bm{i}\sigma}^{\tau}b_{\bm{i}\sigma}^{\tau}-2S)\bigg)e^{\bar{{\vb{b}}}^{\tau}\vb{b}^{\tau}}\bigg]\nonumber \\
 & =\int\mathcal{D}^{2}\vb{b}\int\mathcal{D}\lambda\exp\bigg(-\int_{0}^{\beta}d\tau\sum_{{\bm{i}}\sigma}\bar{b}_{{\bm{i}}\sigma}^{\tau}\partial_{\tau}b_{{\bm{i}}\sigma}^{\tau}+H[j(\tau),h]+i\sum_{\bm{i}}\lambda_{\bm{i}}^{\tau}(\sum_{\sigma}\bar{b}_{{\bm{i}}\sigma}^{\tau}b_{{\bm{i}}\sigma}^{\tau}-2S)\bigg)\label{eq:partition}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where we have assumed the operators in 
\begin_inset Formula $(...)$
\end_inset

 of the first line are evaluated at equal time, which is of course a shaky
 assumption.
 The effect of this time-ordering will be compensated by a manipulation
 in the Fourier transform of the boson operators later.
 The short-handed notations of the integration measures are defined as 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\int\mathcal{D}^{2}\bm{b} & =\lim_{\epsilon\rightarrow0}\prod_{\tau}\dd^{2}\vb{b}^{\tau}\nonumber \\
\int\mathcal{D}\lambda & =\lim_{\epsilon\rightarrow0}\prod_{\bm{i}\tau}\epsilon\int\dd\lambda_{\bm{i}}^{\tau}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The 
\begin_inset Quotes eld
\end_inset

classical generating Hamiltonian
\begin_inset Quotes erd
\end_inset

 
\begin_inset Formula $H[j(\tau),h]$
\end_inset

 in 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:partition"
plural "false"
caps "false"
noprefix "false"

\end_inset

 has been evaluated in between boson coherent states, then it's no longer
 an operator.
 We can call it 
\begin_inset Quotes eld
\end_inset

classical
\begin_inset Quotes erd
\end_inset

:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
H[j(\tau),h] & =J_{1}\sum_{\bm{i},\bm{\delta}_{1}>0}(-\bar{A}_{\bm{i},\bm{\delta}_{1}}^{\tau}A_{\bm{i},\bm{\delta}_{1}}^{\tau}+\bar{B}_{\bm{i},\bm{\delta}_{1}}^{\tau}B_{\bm{i},\bm{\delta}_{1}}^{\tau})\nonumber \\
 & +J_{2}\sum_{\bm{i},\bm{\delta}_{2}>0}(-\bar{A}_{\bm{i},\bm{\delta}_{2}}^{\tau}A_{\bm{i},\bm{\delta}_{2}}^{\tau}+\bar{B}_{\bm{i},\bm{\delta}_{2}}^{\tau}B_{\bm{i},\bm{\delta}_{2}}^{\tau})\nonumber \\
 & -\sum_{\bm{i}}\sum_{\sigma\sigma'}j_{\bm{i}}^{\tau\mu}\bar{b}_{\bm{i}\sigma}^{\tau}b_{\bm{i}\sigma'}^{\tau}\sigma_{\sigma\sigma'}^{\mu}+\mathcal{H}_{h}\label{eq:clham}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
A_{\bm{i},\bm{\delta}}^{\tau} & =\frac{1}{2}(b_{\bm{i}\uparrow}^{\tau}b_{\bm{i}+\bm{\delta}\downarrow}^{\tau}-b_{\bm{i}\downarrow}^{\tau}b_{\bm{i}+\bm{\delta}\uparrow}^{\tau})\nonumber \\
B_{\bm{i},\bm{\delta}}^{\tau} & =\frac{1}{2}(b_{\bm{i}\uparrow}^{\tau}\bar{b}_{\bm{i}+\bm{\delta}\uparrow}^{\tau}+b_{\bm{i}\downarrow}^{\tau}\bar{b}_{\bm{i}+\bm{\delta}\downarrow}^{\tau})
\end{align}

\end_inset


\end_layout

\begin_layout Subsection
Hubbard-Stratonovich transform
\end_layout

\begin_layout Standard
The classical Hamiltonian 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:clham"
plural "false"
caps "false"
noprefix "false"

\end_inset

 is quartic in boson coherent states variables, which cannot be readily
 integrated.
 We introduce Hubbard-Stratonovich (H-S) transform to decouple it into quadratic
 terms to solve this problem.
 The H-S identities for pairs of auxiliary fields 
\begin_inset Formula $(\bar{W}_{\bm{i},\bm{\delta}}^{r},W_{\bm{i},\bm{\delta}}^{r})$
\end_inset

 are [
\begin_inset Formula $\bm{\delta}=\bm{\delta}_{1},\bm{\delta}_{2}$
\end_inset

 and 
\begin_inset Formula $r=A,B$
\end_inset

] 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
e^{-J_{\bm{\delta}}\bar{B}_{\bm{i}\bm{\delta}}^{\tau}B_{\bm{i},\bm{\delta}}^{\tau}}=J_{\bm{\delta}}\int\frac{\dd\bar{W}_{\bm{i},\bm{\delta}}^{(B)\tau}\dd W_{\bm{i},\bm{\delta}}^{(B)\tau}}{2\pi i}e^{-J_{\bm{\delta}}\bar{W}_{\bm{i},\bm{\delta}}^{(B)\tau}W_{\bm{i},\bm{\delta}}^{(B)\tau}+J_{\bm{\delta}}(-\bar{W}_{\bm{i},\bm{\delta}}^{(B)\tau}B_{\bm{i},\bm{\delta}}^{\tau}+W_{\bm{i},\bm{\delta}}^{(B)\tau}\bar{B}_{\bm{i},\bm{\delta}}^{\tau})}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
e^{J_{\bm{\delta}}\bar{A}_{\bm{i}\bm{\delta}}^{\tau}A_{\bm{i},\bm{\delta}}^{\tau}}=J_{\bm{\delta}}\int\frac{\dd\bar{W}_{\bm{i},\bm{\delta}}^{(A)\tau}\dd W_{\bm{i},\bm{\delta}}^{(A)\tau}}{2\pi i}e^{-J_{\bm{\delta}}\bar{W}_{\bm{i},\bm{\delta}}^{(A)\tau}W_{\bm{i},\bm{\delta}}^{(A)\tau}+J_{\bm{\delta}}(\bar{W}_{\bm{i},\bm{\delta}}^{(A)\tau}A_{\bm{i},\bm{\delta}}^{\tau}+W_{\bm{i},\bm{\delta}}^{(A)\tau}\bar{A}_{\bm{i},\bm{\delta}}^{\tau})}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
As an example, we can check the second identity: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
 & \int\dd\Re W\dd\Im We^{-J(\bar{W}W+\bar{W}A-W\bar{A})}\nonumber \\
 & =\int\dd\Re W\dd\Im We^{-J[(\Re W-i\Im W)(\Re W+i\Im W)+(\Re W-i\Im W)A-(\Re W+i\Im W)\bar{A}]}\nonumber \\
 & =\int\dd\Re W\dd\Im We^{(\Re W+\frac{1}{2}(A-\bar{A}))^{2}+(\Im W-\frac{i}{2}(A+\bar{A}))^{2}}e^{\frac{1}{4}J[(A+\bar{A})^{2}-(A-\bar{A})^{2}]}\nonumber \\
 & =\frac{\pi}{J}e^{J\bar{A}A}
\end{align}

\end_inset

 
\end_layout

\begin_layout Standard
Also notice that 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\int\dd\bar{W}\dd W=(2i)\int\dd\Re W\dd\Im W
\end{equation}

\end_inset


\end_layout

\begin_layout Section
The effective action
\end_layout

\begin_layout Standard
The partition function 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:partition"
plural "false"
caps "false"
noprefix "false"

\end_inset

 is now quadratic in boson variables, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
Z[j,h]=\int\mathcal{D}\bar{W}\mathcal{D}W\mathcal{D}\lambda e^{-\mathcal{S}_{\text{eff}}(\bar{W},W,\lambda,j,h)}\label{eq:pathintegral}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The integration measure for the auxiliary fields is defined as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{D}\bar{W}\mathcal{D}W=\prod_{\bm{i},\bm{\delta}>0}\prod_{\tau}\prod_{r=A,B}J_{\bm{\delta}}\frac{\dd\bar{W}_{\bm{i},\bm{\delta}}^{(r)\tau}\dd W_{\bm{i},\bm{\delta}}^{(r)\tau}}{2\pi i}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The effective action can be split into the auxiliary fields action and the
 bosonic action
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\text{eff}}(\bar{W},W,\lambda,j,h)=\mathcal{S}_{0}(\bar{W},W,\lambda)+\mathcal{S}_{\text{bos}}(\bar{W},W,\lambda,j,h)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The auxiliary fields action takes the form
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{0}(\bar{W},W,\lambda)=\int_{0}^{\beta}d\tau\bigg(\sum_{\bm{i},\bm{\delta}>0}\sum_{r}J_{\bm{\delta}}\bar{W}_{\bm{i}\bm{\delta}}^{(r)\tau}W_{\bm{i}\bm{\delta}}^{(r)\tau}-i2S\sum_{\bm{i}}\lambda_{\bm{i}}^{\tau}\bigg)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The bosonic action is defined as the integration over quadratic bosonic
 variables,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
e^{-\mathcal{S}_{\text{bos}}} & =\int\mathcal{D}^{2}\vb{b}\exp\bigg(-\int_{0}^{\beta}d\tau\sum_{\bm{i}\sigma}\bar{b}_{\bm{i}\sigma}^{\tau}\partial_{\tau}b_{\bm{i}\sigma}^{\tau}+i\sum_{\bm{i}}\lambda_{\bm{i}}^{\tau}\sum_{\sigma}\bar{b}_{\bm{i}\sigma}^{\tau}b_{\bm{i}\sigma}^{\tau}\nonumber \\
 & +\sum_{\bm{i},\bm{\delta}>0}J_{\bm{\delta}}\big(\bar{W}_{\bm{i},\bm{\delta}}^{(B)\tau}B_{\bm{i},\bm{\delta}}^{\tau}-W_{\bm{i},\bm{\delta}}^{(B)\tau}\bar{B}_{\bm{i},\bm{\delta}}^{\tau}-\bar{W}_{\bm{i},\bm{\delta}}^{(A)\tau}A_{\bm{i},\bm{\delta}}^{\tau}-W_{\bm{i},\bm{\delta}}^{(A)\tau}\bar{A}_{\bm{i},\bm{\delta}}^{\tau}\big)\nonumber \\
 & -\sum_{\bm{i}}\sum_{\sigma\sigma'}j_{\bm{i}}^{\tau\mu}\bar{b}_{\bm{i}\sigma}^{\tau}b_{\bm{i}\sigma'}^{\tau}\sigma_{\sigma\sigma'}^{\mu}+\mathcal{H}_{h}\bigg)\nonumber \\
 & =\int\mathcal{D}^{2}\vb{b}e^{-\vb{b}^{\dagger}\mathcal{G}^{-1}(\bar{W},W,\lambda,j,h)\vb{b}}=\det[\mathcal{G}(\bar{W},W,\lambda,j,h)]\label{eq:defofaction1}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The dimension of 
\begin_inset Formula $\mathcal{G}$
\end_inset

 is 
\begin_inset Formula $[(\beta/\epsilon)\mathcal{N}N]\times[(\beta/\epsilon)\mathcal{N}N]$
\end_inset

 , where 
\begin_inset Formula $N$
\end_inset

 is the group index of 
\begin_inset Formula $SU(N)$
\end_inset

, and 
\begin_inset Formula $N=2$
\end_inset

 for physical 
\begin_inset Formula $SU(2)$
\end_inset

 model; 
\begin_inset Formula $\mathcal{N}$
\end_inset

 is the number of sites of the lattice.
 
\end_layout

\begin_layout Subsection
Nambu representation 
\end_layout

\begin_layout Standard
To investigate possible collective behaviors of the model, we introduce
 Fourier transforms on boson variables to momentum and Matsubara space.
 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
b_{\bm{i}\sigma}^{\tau} & =\frac{1}{\sqrt{\mathcal{N}\beta}}\sum_{\bm{k},n}b_{\bm{k}\sigma}^{\omega_{n}}e^{-i(\bm{k}\cdot\bm{r}_{i}-\omega_{n}\tau)}\\
\bar{b}_{\bm{i}\sigma}^{\tau} & =\frac{1}{\sqrt{\mathcal{N}\beta}}\sum_{\bm{k},n}\bar{b}_{\bm{k}\sigma}^{\omega_{n}}e^{i(\bm{k}\cdot\bm{r}_{i}-\omega_{n}\tau)}e^{-i\omega_{n}0^{+}}\label{eq:Fourier}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where the 
\series bold
convergence factor
\series default
 
\begin_inset Formula $e^{i\omega_{n}0^{+}}$
\end_inset

 is introduced to account for the time order of boson coherent states as
 mentioned in the texts after 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:partition"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
 Similarly, the Fourier transforms on the auxiliary fields are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
W_{\bm{i},\bm{\delta}}^{(r)\tau} & =\frac{1}{\sqrt{\mathcal{N}\beta}}\sum_{\bm{k}}\sum_{n}W_{\bm{k},\bm{\delta}}^{(r)\omega_{n}}e^{-i(\bm{k}\cdot\bm{x}_{i}-\omega_{n}\tau)}\nonumber \\
\bar{W}_{\bm{i},\bm{\delta}}^{(r)\tau} & =\frac{1}{\sqrt{\mathcal{N}\beta}}\sum_{\bm{k}}\sum_{n}\bar{W}_{\bm{k},\bm{\delta}}^{(r)\omega_{n}}e^{i(\bm{k}\cdot\bm{x}_{i}-\omega_{n}\tau)}\nonumber \\
\lambda_{\bm{i}}^{\tau} & =\frac{1}{\sqrt{\mathcal{N}\beta}}\sum_{\bm{k}}\sum_{n}\lambda_{\bm{k}}^{\omega_{n}}e^{-i(\bm{k}\cdot\bm{x}_{i}-\omega_{n}\tau)}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
It's convenient to work in the
\color orange
 
\color red
Nambu representation
\color inherit
 
\begin_inset Formula $\vb{b}_{\bm{k},\omega}^{\dagger}=(\bar{b}_{\bm{k}\uparrow}^{\omega},b_{-\bm{k}\downarrow}^{-\omega},\bar{b}_{\bm{k}\downarrow}^{\omega},b_{-\bm{k}\uparrow}^{-\omega})$
\end_inset

 , which doubles the degrees of freedom of the system.
 The inverse Green function at 
\emph on
each
\emph default
 
\begin_inset Formula $(\omega,\bm{k})$
\end_inset

 is a 
\begin_inset Formula $4\times4$
\end_inset

 matrix, and the full inverse Green function is given by 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{G}^{-1} & =\frac{1}{2}\sum_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{G}_{\bm{k},\omega}^{-1}\vb{b}_{\bm{k},\omega}\\
 & \equiv\frac{1}{2}\sum_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{M}_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}\label{eq:gsumm}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mathcal{M}_{\bm{k},\omega}\equiv\mathcal{G}_{\bm{k},\omega}^{-1}$
\end_inset

 is called the dynamical matrix, where we have inserted the factor 
\begin_inset Formula $1/2$
\end_inset

 to avoid over-counting.
 For details of calculation of the dynamical matrix, see Appendix (A).
 In Nambu representation, the Gaussian integral 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:defofaction1"
plural "false"
caps "false"
noprefix "false"

\end_inset

 is equivalent to 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
e^{-\mathcal{S}_{\text{bos}}} & =\int\prod_{\bm{k},\omega>0}\mathcal{D}^{2}\vb{b}_{\bm{k},\omega}e^{-\frac{1}{2}\sum_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{M}_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}}\\
 & =\int\prod_{\bm{k},\omega>0}\mathcal{D}^{2}\vb{b}_{\bm{k},\omega}e^{-\frac{1}{2}\sum_{\bm{k},\omega>0}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{M}_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}}e^{-\frac{1}{2}\sum_{\bm{k},\omega<0}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{M}_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}}\\
 & =\int\prod_{\bm{k},\omega>0}\mathcal{D}^{2}\vb{b}_{\bm{k},\omega}e^{\sum_{\bm{k},\omega>0}\vb{b}_{\bm{k},\omega}^{\dagger}\mathcal{M}_{\bm{k},\omega}\vb{b}_{\bm{k},\omega}}\\
 & =\prod_{\bm{k},\omega>0}\det\mathcal{G}_{\bm{k},\omega}\\
 & =\bigg[\prod_{\bm{k},\omega}\det\mathcal{G}_{\bm{k},\omega}\bigg]^{\frac{1}{2}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Notice that we only integrate over 
\begin_inset Formula $\bm{k},\omega>0$
\end_inset

 to avoid another possible over-counting from the integration.
 The bosonic action is now written as
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\text{bos}}=-\frac{1}{2}\sum_{\bm{k},\omega}\ln\det\mathcal{G}_{\bm{k},\omega}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The elements of dynamical matrix 
\begin_inset Formula $\frac{1}{2}\mathcal{M}_{\bm{k},\bm{k}'}^{\omega,\omega'}[j=0]$
\end_inset

 in the Nambu representation are listed below:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\frac{1}{2}\mathcal{M}_{11} & =\bigg[\frac{1}{2}i\omega\delta_{\bm{k},\bm{k}'}\delta_{\omega,\omega'}+\frac{i}{2}\frac{\lambda_{\bm{k}-\bm{k}'}^{\omega-\omega'}}{\sqrt{\mathcal{N}\beta}}\nonumber \\
 & -\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bigg(W_{\bm{k}-\bm{k}',\bm{\delta}}^{(B)\omega-\omega'}e^{-i(\bm{k}'+\frac{\bm{Q}}{2})\cdot\bm{\delta}}-\bar{W}_{\bm{k}'-\bm{k},\bm{\delta}}^{(B)\omega'-\omega}e^{i(\bm{k}+\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{-i\omega0^{+}}\label{eq:m11}\\
\frac{1}{2}\mathcal{M}_{22} & =\bigg[\frac{1}{2}(-i\omega)\delta_{\bm{k},\bm{k}'}\delta_{\omega,\omega'}+\frac{i}{2}\frac{\lambda_{\bm{k}'-\bm{k}}^{\omega'-\omega}}{\sqrt{\mathcal{N}\beta}}\nonumber \\
 & -\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bigg(W_{\bm{k}'-\bm{k},\bm{\delta}}^{(B)\omega'-\omega}e^{-i(\bm{k}+\frac{\bm{Q}}{2})\cdot\bm{\delta}}-\bar{W}_{\bm{k}-\bm{k}',\bm{\delta}}^{(B)\omega-\omega'}e^{i(\bm{k}'+\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{i\omega0^{+}}\\
\frac{1}{2}\mathcal{M}_{33} & =\bigg[\frac{1}{2}i\omega\delta_{\bm{k},\bm{k}'}\delta_{\omega,\omega'}+\frac{i}{2}\frac{\lambda_{\bm{k}-\bm{k}'}^{\omega-\omega'}}{\sqrt{\mathcal{N}\beta}}\nonumber \\
 & -\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bigg(W_{\bm{k}-\bm{k}',\bm{\delta}}^{(B)\omega-\omega'}e^{-i(\bm{k}'-\frac{\bm{Q}}{2})\cdot\bm{\delta}}-\bar{W}_{\bm{k}'-\bm{k},\bm{\delta}}^{(B)\omega'-\omega}e^{i(\bm{k}-\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{-i\omega0^{+}}\\
\frac{1}{2}\mathcal{M}_{44} & =\bigg[\frac{1}{2}(-i\omega)\delta_{\bm{k},\bm{k}'}\delta_{\omega,\omega'}+\frac{i}{2}\frac{\lambda_{\bm{k}'-\bm{k}}^{\omega'-\omega}}{\sqrt{\mathcal{N}\beta}}\nonumber \\
 & -\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bigg(W_{\bm{k}'-\bm{k},\bm{\delta}}^{(B)\omega'-\omega}e^{-i(\bm{k}-\frac{\bm{Q}}{2})\cdot\bm{\delta}}-\bar{W}_{\bm{k}-\bm{k}',\bm{\delta}}^{(B)\omega-\omega'}e^{i(\bm{k}'-\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{i\omega0^{+}}\\
\frac{1}{2}\mathcal{M}_{12} & =\bigg[\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}W_{\bm{k}-\bm{k}',\bm{\delta}}^{(A)\omega-\omega'}\bigg(e^{i(\bm{k}+\frac{\bm{Q}}{2})\cdot\bm{\delta}}-e^{-i(\bm{k}'+\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{-i(\omega-\omega')0^{+}}\\
\frac{1}{2}\mathcal{M}_{21} & =\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bar{W}_{\bm{k}'-\bm{k},\bm{\delta}}^{(A)\omega'-\omega}\bigg(e^{-i(\bm{k}'+\frac{\bm{Q}}{2})\cdot\bm{\delta}}-e^{i(\bm{k}+\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\\
\frac{1}{2}\mathcal{M}_{34} & =\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}W_{\bm{k}-\bm{k}',\bm{\delta}}^{(A)\omega-\omega'}\bigg(e^{-i(\bm{k}'-\frac{\bm{Q}}{2})\cdot\bm{\delta}}-e^{i(\bm{k}-\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\\
\frac{1}{2}\mathcal{M}_{43} & =\bigg[\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta_{2}}}\frac{J_{\bm{\delta}}}{4\sqrt{\mathcal{N}\beta}}\bar{W}_{\bm{k}'-\bm{k},\bm{\delta}}^{(A)\omega'-\omega}\bigg(e^{i(\bm{k}-\frac{\bm{Q}}{2})\cdot\bm{\delta}}-e^{-i(\bm{k}'-\frac{\bm{Q}}{2})\cdot\bm{\delta}}\bigg)\bigg]e^{-i(\omega-\omega')0^{+}}\\
\frac{1}{2}\mathcal{M}_{13} & =\mathcal{M}_{24}=\mathcal{M}_{31}=\mathcal{M}_{42}=-\frac{h}{2}\delta_{\bm{k},\bm{k}'}\\
\frac{1}{2}\mathcal{M}_{14} & =\mathcal{M}_{23}=\mathcal{M}_{32}=\mathcal{M}_{41}=0\label{eq:m41}
\end{align}

\end_inset


\end_layout

\begin_layout Section
Saddle point expansion
\end_layout

\begin_layout Standard
The generating functional 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:pathintegral"
plural "false"
caps "false"
noprefix "false"

\end_inset

 can be evaluated using 
\shape italic
saddle point approximation
\shape default
, assuming 
\begin_inset Formula $N=2$
\end_inset

 , the group index, is large.
 We expand the effective action around its saddle point: 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\text{eff}}=\mathcal{S}^{(0)}+\sum_{\alpha}\mathcal{S}_{\alpha}^{(1)}\Delta\phi_{\alpha}+\sum_{\alpha_{1}\alpha_{2}}\mathcal{S}_{\alpha_{1}\alpha_{2}}^{(2)}\Delta\phi_{\alpha_{1}}\Delta\phi_{\alpha_{2}}+\mathcal{S}_{\text{int}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where the fluctuations of gauge fields around the saddle point are denoted
 by 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\Delta\phi_{\alpha}=\phi_{\alpha}-\phi_{\alpha}^{\text{sp}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The label 
\begin_inset Formula $\alpha$
\end_inset

 includes field, Nambu (momentum and frequency) indices, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\phi_{\alpha}=(\bar{W}_{\bm{k},\bm{\delta}}^{(r)\omega},W_{\bm{k},\bm{\delta}}^{(r)\omega},\lambda_{\bm{k}}^{\omega})
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\mathcal{S}_{\text{int}}$
\end_inset

 includes third and higher order expansion in the fluctuations of gauge
 fields, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\text{int}}=\sum_{n=3}^{\infty}\mathcal{S}_{\alpha_{1}..\alpha_{n}}^{(n)}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The coefficients of 
\begin_inset Formula $\mathcal{S}_{\text{int}}$
\end_inset

 are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\alpha_{1},...\alpha_{n}}^{(n)}=\frac{1}{n!}\frac{\partial^{n}\mathcal{S}_{\text{eff}}}{\partial\phi_{\alpha_{1}}...\partial\phi_{\alpha_{n}}}\bigg|_{\text{sp}}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Perturbation theory
\end_layout

\begin_layout Standard
We will rewrite the bosonic action 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:defofaction1"
plural "false"
caps "false"
noprefix "false"

\end_inset

 in such a way that is useful for perturbative calculations:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{S}_{\text{bos}} & =-\frac{1}{2}\sum_{\bm{k},\omega}\ln\det\mathcal{G}_{\bm{k},\omega}\\
 & =-\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\mathcal{G}_{\bm{k},\omega}\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\mathcal{G}_{\bm{k},\omega}^{-1}\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\big\{\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1}[1+\mathcal{G}_{\bm{k},\omega;\text{sp}}(\mathcal{G}_{\bm{k},\omega}^{-1}-\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1})]\big\}\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1}+\frac{1}{4}\sum_{\bm{k},\omega}\Tr\ln[1+\mathcal{G}_{\bm{k},\omega;\text{sp}}(\mathcal{G}_{\bm{k},\omega}^{-1}-\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1})]\\
 & =\mathcal{S}_{\text{bos}}[\phi=0]+\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\big[1+\mathcal{G}_{\bm{k},\omega;\text{sp}}\sum_{\alpha}\Delta\phi_{\alpha}\hat{v}_{\alpha}\big]\label{eq:expand1}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mathcal{S}_{\text{bos}}[\phi=0]=\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1}$
\end_inset

 is the saddle point bosonic action, and the 
\emph on
internal vertices
\emph default
 are defined as following:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
(\mathcal{G}_{\bm{k},\omega}^{-1}-\mathcal{G}_{\bm{k},\omega;\text{sp}}^{-1}) & =\sum_{\alpha}\Delta\phi_{\alpha}\frac{\partial\mathcal{G}_{\bm{k},\omega}^{-1}}{\partial\phi_{\alpha}}\bigg|_{\phi=0}\\
 & =\sum_{\alpha}\Delta\phi_{\alpha}\hat{v}_{\alpha}\label{eq:expand2}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Then 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{S}_{\text{bos}}-\mathcal{S}_{\text{bos}}[\phi & =0]=\frac{1}{2}\sum_{\bm{k},\omega}\Tr\ln\big[1+\mathcal{G}_{\bm{k},\omega;\text{sp}}\sum_{\alpha}\Delta\phi_{\alpha}\hat{v}_{\alpha}\big]\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n}\Tr\bigg(\mathcal{G}_{\bm{k},\omega;\text{sp}}\sum_{\alpha}\Delta\phi_{\alpha}\hat{v}_{\alpha}\bigg)^{n}\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n}\sum_{\alpha_{1},...,\alpha_{n}}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}}\Tr\bigg(\mathcal{G}_{\bm{k},\omega;\text{sp}}\hat{v}_{\alpha_{1}}...\mathcal{G}_{\bm{k},\omega;\text{sp}}\hat{v}_{\alpha_{n}}\bigg)\\
 & =\frac{1}{2}\sum_{\bm{k},\omega}\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n!}\sum_{\alpha_{1},...,\alpha_{n}}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}}\sum_{P(\alpha_{1},...,\alpha_{n})}\Tr\bigg(\mathcal{G}_{\bm{k},\omega;\text{sp}}\hat{v}_{\alpha_{1}}...\mathcal{G}_{\bm{k},\omega;\text{sp}}\hat{v}_{\alpha_{n}}\bigg)\label{eq:expand3}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $P(\alpha_{1},...,\alpha_{n})$
\end_inset

 denotes the permutation of 
\begin_inset Formula $(\alpha_{1},...,\alpha_{n})$
\end_inset

 .
 We are ready to written down the effective action 
\begin_inset Formula $\mathcal{S}_{\text{eff}}$
\end_inset

 order by order
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{S}^{(0)} & =\mathcal{S}_{0}^{(0)}+\mathcal{S}_{\text{bos}}[\phi=0]=\mathcal{S}^{\text{sp}}\\
\mathcal{S}_{\alpha}^{(1)} & =\frac{\partial\mathcal{S}_{0}^{(1)}}{\partial\phi_{\alpha}}+\frac{1}{2}\sum_{\alpha}\Tr\big[\mathcal{G}_{\text{sp}}\hat{v}_{\alpha}\big]=0\\
\mathcal{S}_{\alpha_{1}\alpha_{2}}^{(2)} & =\frac{1}{2}\frac{\partial^{2}\mathcal{S}_{0}^{(2)}}{\partial\phi_{\alpha_{1}}\partial\phi_{\alpha_{2}}}-\frac{1}{4}\sum_{\alpha_{1}\alpha_{2}}\Tr\bigg(\mathcal{G}_{\text{sp}}\hat{v}_{\alpha_{1}}\mathcal{G}_{\text{sp}}\hat{v}_{\alpha_{2}}\bigg)\\
\mathcal{S}_{\alpha_{1},...\alpha_{n}}^{\text{int}} & =\mathcal{S}_{\text{bos}}^{(n\geq3)}\label{eq:effectivexpansion}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
In summary, the generating functional is now written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
Z[j,h]=e^{-\mathcal{S}^{\text{sp}}(\bar{W}_{\text{sp}},W_{\text{sp}},\lambda_{\text{sp}},j)}\int\mathcal{D}[\bar{\phi},\phi]e^{-(\Delta\vec{\phi}^{\dagger}\mathcal{S}^{(2)}\Delta\vec{\phi}+\mathcal{S}^{\text{int}})}\label{eq:pertgenerating}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\int\mathcal{D}[\bar{\phi},\phi]=\int\mathcal{D}\bar{W}\mathcal{D}W\mathcal{D}\lambda
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The first factor of 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:pertgenerating"
plural "false"
caps "false"
noprefix "false"

\end_inset

 represents the partition functional within the saddle point approximation,
 while the second term is the contribution from the fluctuations of the
 auxiliary fields.
 This form is standard for perturbative calculations in field theory.
 The quadratic term 
\begin_inset Formula $\mathcal{S}^{(2)}$
\end_inset

 describes the Gaussian fluctuations around the saddle point, whose elements
 define the fluctuating matrix:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{S}_{\alpha_{1},\alpha_{2}}^{(2)} & =\frac{1}{2}\frac{\partial^{2}\mathcal{S}_{0}^{(2)}}{\partial\phi_{\alpha_{1}}\partial\phi_{\alpha_{2}}}-\frac{1}{4}\sum_{\alpha_{1}\alpha_{2}}\Tr\bigg(\mathcal{G}_{\text{sp}}\hat{v}_{\alpha_{1}}\mathcal{G}_{\text{sp}}\hat{v}_{\alpha_{2}}\bigg)\\
 & =(\Pi_{0}-\Pi)_{\alpha_{1}\alpha_{2}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula $\Pi_{0}$
\end_inset

 is a diagonal matrix containing the coupling constant 
\begin_inset Formula $J_{\bm{\delta}}$
\end_inset

 in the 
\begin_inset Formula $WW$
\end_inset

 fields and zero in 
\begin_inset Formula $\lambda\lambda$
\end_inset

 element, 
\begin_inset Formula $\Pi$
\end_inset

 is also known as the polarization matrix, whose detail form will be derived
 later.
 
\end_layout

\begin_layout Subsection
Saddle point dynamical matrix
\end_layout

\begin_layout Standard
The saddle point requires 
\begin_inset Formula $\mathcal{S}_{\alpha}^{(1)}=0$
\end_inset

, 
\shape italic
i.e.
 
\emph on
(according to 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:effectivexpansion"
plural "false"
caps "false"
noprefix "false"

\end_inset

)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\left.\frac{\partial\mathcal{S}_{\text{eff}}}{\partial\phi_{\alpha}}\right\vert _{\text{sp}} & =\left.\frac{\partial\mathcal{S}_{0}^{(0)}}{\partial\phi_{\alpha}}\right\vert _{\text{sp}}+\left.\frac{\partial\mathcal{S}_{\text{bos}}}{\partial\phi_{\alpha}}\right\vert _{\text{sp}}\nonumber \\
 & =\left.\frac{\partial\mathcal{S}_{0}^{(0)}}{\partial\phi_{\alpha}}\right\vert _{\text{sp}}+\frac{1}{2}\Tr\bigg[\mathcal{G}^{\text{sp}}\frac{\partial\mathcal{G}^{-1}}{\partial\phi_{\alpha}}\bigg]=0\label{eq:saddlepointeGreenself}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The trace goes over all 
\begin_inset Formula $\alpha$
\end_inset

 indices (fields and Nambu).
 On the other hand, we can represent the traces above by some Gaussian integrals.
 According to 
\begin_inset CommandInset ref
LatexCommand formatted
reference "eq:defofaction1"
plural "false"
caps "false"
noprefix "false"

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\text{bos}}=-\ln e^{\int_{0}^{\beta}\dd\tau\sum_{\bm{i}}\bar{b}_{\bm{i}}^{\tau}\mathcal{G}_{\text{}}^{-1}[\phi]b_{\bm{i}}^{\tau}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Therefore
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\frac{\partial\mathcal{S}_{\text{bos}}}{\partial\phi_{\alpha}} & \bigg|_{\text{sp}}=-\frac{\int\mathcal{D}^{2}\bm{b}(\partial\mathcal{G}^{-1}[\phi]/\partial\phi_{\alpha})e^{\int_{0}^{\beta}\dd\tau\sum_{\bm{i}}\bar{b}_{\bm{i}}^{\tau}\mathcal{G}_{\text{}}^{-1}[\phi]b_{\bm{i}}^{\tau}}}{e^{\int_{0}^{\beta}\dd\tau\sum_{\bm{i}}\bar{b}_{\bm{i}}^{\tau}\mathcal{G}_{\text{}}^{-1}[\phi]b_{\bm{i}}^{\tau}}}\bigg|_{\text{sp}}\\
 & =-\frac{1}{Z_{\text{sp}}}\int\mathcal{D}^{2}\bm{b}e^{\int_{0}^{\beta}\dd\tau\sum_{\bm{i}}\bar{b}_{\bm{i}}^{\tau}\mathcal{G}_{\text{}}^{-1}[\phi]b_{\bm{i}}^{\tau}}\frac{\partial\mathcal{G}^{-1}[\phi]}{\partial\phi_{\alpha}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\left.\bar{W}_{\bm{i},\bm{\delta}}^{(B)\tau}\right\vert _{\text{sp}} & =-\left.\expval{B_{\bm{i},\bm{\delta}}^{\tau}}\right\vert _{\text{sp}}\nonumber \\
\left.W_{\bm{i},\bm{\delta}}^{(B)\tau}\right\vert _{\text{sp}} & =+\left.\expval{\bar{B}_{\bm{i},\bm{\delta}}^{\tau}}\right\vert _{\text{sp}}\nonumber \\
\left.\bar{W}_{\bm{i},\bm{\delta}}^{(A)\tau}\right\vert _{\text{sp}} & =+\left.\expval{A_{\bm{i},\bm{\delta}}^{\tau}}\right\vert _{\text{sp}}\nonumber \\
\left.W_{\bm{i},\bm{\delta}}^{(A)\tau}\right\vert _{\text{sp}} & =+\left.\expval{\bar{A}_{\bm{i},\bm{\delta}}^{\tau}}\right\vert _{\text{sp}}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left.\expval{\mathcal{O}}\right\vert _{\text{sp}}=Z_{\text{sp}}^{-1}\int\mathcal{D}^{2}\bm{b}\mathcal{O}(\bm{r},\tau)e^{-\mathcal{S}_{\text{sp}}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We assume that the auxiliary fields are 
\series bold
static
\series default
 and 
\series bold
homogeneous
\series default
 at the saddle point.
 Consider the following 
\emph on
ansatz
\emph default
,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\left.\bar{W}_{\bm{\delta}}^{(B)}\right\vert _{\text{sp}} & =B_{\bm{\delta}} & \left.W_{\bm{\delta}}^{(B)}\right\vert _{\text{sp}} & =-B_{\bm{\delta}} & \left.\bar{W}_{\bm{\delta}}^{(A)}\right\vert _{\text{sp}} & =-i{A_{\bm{\delta}}} & \left.W_{\bm{\delta}}^{(A)}\right\vert _{\text{sp}} & =iA_{\bm{\delta}} & \left.\lambda\right\vert _{\text{sp}} & =-i\lambda
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $A_{\bm{\delta}}$
\end_inset

, 
\begin_inset Formula $B_{\bm{\delta}}$
\end_inset

, and 
\begin_inset Formula $\lambda$
\end_inset

 are real.
 The Fourier transforms are
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\phi_{\bm{k}}^{\omega}\big|_{\text{sp}}=\sqrt{\mathcal{N\beta}}\phi\delta_{\bm{k},0}\delta_{\omega,0}\quad\text{for}\ \phi=\bar{W}_{\bm{\delta}}^{(r)},W_{\bm{\delta}}^{(r)},\lambda
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The effective action at saddle point now describes non-interacting bosons.
 The corresponding dynamical matrix 
\begin_inset Formula $\mathcal{M}_{\bm{k},\omega}^{\text{sp}}$
\end_inset

 takes the form
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\begin{pmatrix}(i\omega+\lambda+\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{B})e^{-i\omega0^{+}} & -\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{A} & -h/2 & 0\\[1em]
-\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{A} & (-i\omega+\lambda+\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{B})e^{i\omega0^{+}} & 0 & -h/2\\[1em]
-h/2 & 0 & (i\omega+\lambda+\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{B})e^{-i\omega0^{+}} & -\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{A}\\[1em]
0 & -h/2 & -\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{A} & (-i\omega+\lambda+\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{B})e^{i\omega0^{+}}
\end{pmatrix}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\gamma_{\bm{k}}^{A} & =\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta}_{2}>0}J_{\bm{\delta}}A_{\bm{\delta}}\sin(\bm{k}\cdot\bm{\delta})\\
\gamma_{\bm{k}}^{B} & =\sum_{\bm{\delta}=\bm{\delta}_{1},\bm{\delta}_{2}>0}J_{\bm{\delta}}B_{\bm{\delta}}\cos(\bm{k}\cdot\bm{\delta})
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The action 
\begin_inset Formula $\mathcal{S}_{0}^{(0)}$
\end_inset

 at the saddle point is written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{0}^{(0)}=\beta\mathcal{N}\bigg(\sum_{\bm{\delta}>0}J_{\bm{\delta}}(A_{\bm{\delta}}^{2}-B_{\bm{\delta}}^{2})-2\lambda S\bigg)
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Saddle point Green function
\end_layout

\begin_layout Standard
The dispersion relations of 
\shape italic
free
\shape default
 Schwinger bosons (spinons) are given by the 
\series bold
poles
\series default
 of (Matsubara) Green function, which is the inverse of the dynamical matrix
 at the saddle point.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}_{\bm{k},\omega}^{\text{sp}}=(\mathcal{M}_{\bm{k},\omega}^{\text{sp}})^{-1}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We expect two bands of dispersion relations because the external field lifts
 the degeneracy of two types of spinons.
 Furthermore, the spinons propagate both forwards and backwards in imaginary
 time.
 In summary, the saddle point Green function should take the form:
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}_{\bm{k},\omega}^{\text{sp}}(\bm{k},i\omega)=\bigg[\frac{g_{\bm{k}}^{-+}}{i\omega-\epsilon_{\bm{k},+}}+\frac{g_{\bm{k}}^{++}}{i\omega+\epsilon_{\bm{k},+}}+\frac{g_{\bm{k}}^{--}}{i\omega-\epsilon_{\bm{k},-}}+\frac{g_{\bm{k}}^{+-}}{i\omega+\epsilon_{\bm{k},-}}\bigg]
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\epsilon_{\bm{k},\sigma}$
\end_inset

 are the dispersion relations, and 
\begin_inset Formula $g_{\bm{k}}^{\sigma\sigma'}$
\end_inset

 are 
\begin_inset Formula $4\times4$
\end_inset

 matrices yet to be determined.
 The inverse of a general matrix can be calculated as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{G}=\mathcal{M}^{-1}=\frac{1}{\det(\mathcal{M})}\mathcal{C}^{T}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\mathcal{C}$
\end_inset

 is the co-factor matrix of 
\begin_inset Formula $\mathcal{M}$
\end_inset

.
 Thus the poles can be determined by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\det\mathcal{M}_{\bm{k},\omega}^{\text{sp}}(i\omega)=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The dispersion relations take the form (for detail calculation see A.1)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\epsilon_{\bm{k},\pm}=\sqrt{\frac{1}{2}\bigg[\big(\alpha_{\bm{k}+\frac{\bm{Q}}{2}}^{2}+\alpha_{-\bm{k}+\frac{\bm{Q}}{2}}^{2}+\frac{h^{2}}{2}\big)\pm\Delta_{\bm{k}}^{2}\bigg]}\label{eq:dispersion}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\Delta_{\bm{k}}^{2}=\sqrt{\big(\alpha_{\bm{k}+\frac{\bm{Q}}{2}}^{2}-\alpha_{-\bm{k}+\frac{\bm{Q}}{2}}^{2})^{2}+\bigg[\bigg((\lambda+\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{B})+(\lambda+\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{B})\bigg)^{2}-(\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{A}-\gamma_{-\bm{k}+\frac{\bm{Q}}{2}}^{A})^{2}\bigg]h^{2}}\label{eq:g_sigma}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The 
\begin_inset Formula $4\times4$
\end_inset

 matrices 
\begin_inset Formula $g_{\bm{k}}^{\pm\sigma}$
\end_inset

 (
\begin_inset Formula $\sigma=\pm)$
\end_inset

 are (for detail calculation see A.2)
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
g_{\bm{k}}^{-\sigma}=-\begin{pmatrix}A_{\bm{k},\sigma} & C_{\bm{k},\sigma} & B_{\bm{k},\sigma} & D_{\bm{k},\sigma}\\
C_{\bm{k},\sigma} & E_{\bm{k},\sigma} & D_{\bm{-k},\sigma} & F_{\bm{k},\sigma}\\
B_{\bm{k},\sigma} & D_{\bm{-k},\sigma} & A_{\bm{-k},\sigma} & C_{\bm{-k},\sigma}\\
D_{\bm{k},\sigma} & F_{\bm{k},\sigma} & C_{\bm{-k},\sigma} & E_{\bm{-k},\sigma}
\end{pmatrix}\label{eq:greensaddleplus}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
g_{\bm{k}}^{+\sigma}=\begin{pmatrix}E_{\bm{k},\sigma} & C_{\bm{k},\sigma} & F_{\bm{k},\sigma} & D_{\bm{-k},\sigma}\\
C_{\bm{k},\sigma} & A_{\bm{k},\sigma} & D_{\bm{k},\sigma} & B_{\bm{k},\sigma}\\
F_{\bm{k},\sigma} & D_{\bm{k},\sigma} & E_{\bm{-k},\sigma} & C_{\bm{-k},\sigma}\\
D_{\bm{-k},\sigma} & B_{\bm{k},\sigma} & C_{\bm{-k},\sigma} & A_{\bm{-k},\sigma}
\end{pmatrix}\label{eq:greensaddleminus}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
A_{\bm{k},\sigma} & =v_{\bm{k},\sigma}^{2}\frac{\Delta_{-\bm{k},\sigma}^{2}}{\Delta_{\bm{k}}^{2}}+\sigma u_{-\bm{k},\sigma}^{2}\frac{h^{2}}{4\Delta_{\bm{k}}^{2}}\\
B_{\bm{k},\sigma} & =-\sigma\epsilon_{\bm{k},\sigma}\bigg[v_{\bm{k},\sigma}^{2}v_{-\bm{k,}\sigma}^{2}+z_{\bm{k},\sigma}z_{-\bm{k},\sigma}-\bigg(\frac{h}{4\epsilon_{\bm{k},\sigma}}\bigg)^{2}\bigg]\frac{h}{\Delta_{\bm{k}}^{2}}\\
C_{\bm{k},\sigma} & =z_{\bm{k},\sigma}\frac{\Delta_{-\bm{k},\sigma}^{2}}{\Delta_{\bm{k}}^{2}}-\sigma z_{-\bm{k},\sigma}\frac{h^{2}}{4\Delta_{\bm{k}}^{2}}\\
D_{\bm{k},\sigma} & =-\sigma\epsilon_{\bm{k},\sigma}\bigg[v_{\bm{k},\sigma}^{2}z_{-\bm{k},\sigma}+u_{-\bm{k},\sigma}^{2}z_{\bm{k},\sigma}\bigg]\frac{h}{2\Delta_{\bm{k}}^{2}}\\
E_{\bm{k},\sigma} & =u_{\bm{k},\sigma}^{2}\frac{\Delta_{-\bm{k},\sigma}^{2}}{\Delta_{\bm{k}}^{2}}+\sigma v_{-\bm{k},\sigma}^{2}\frac{h^{2}}{4\Delta_{\bm{k}}^{2}}\\
F_{\bm{k},\sigma} & =-\sigma\epsilon_{\bm{k},\sigma}\bigg[u_{\bm{k},\sigma}^{2}u_{-\bm{k},\sigma}^{2}+z_{\bm{k},\sigma}z_{-\bm{k},\sigma}-\bigg(\frac{h}{4\epsilon_{\bm{k},\sigma}}\bigg)^{2}\bigg]\frac{h}{\Delta_{\bm{k}}^{2}}
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
with 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
u_{\bm{k},\sigma}^{2} & =\frac{\lambda+\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{B}}{2\epsilon_{\bm{k},\sigma}}+\frac{1}{2}\nonumber \\
v_{\bm{k},\sigma}^{2} & =\frac{\lambda+\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{B}}{2\epsilon_{\bm{k},\sigma}}-\frac{1}{2}\nonumber \\
z_{\bm{k},\sigma} & =\frac{\gamma_{\bm{k}+\frac{\bm{Q}}{2}}^{A}}{2\epsilon_{\bm{k},\sigma}}\nonumber \\
\Delta_{\bm{k},\sigma}^{2} & =\sigma\big(\epsilon_{\bm{k},\sigma}^{2}-\alpha_{\bm{k}+\frac{\bm{Q}}{2}}^{2}\big)\label{eq:allresults}
\end{align}

\end_inset


\end_layout

\begin_layout Subsection
Saddle point equations
\end_layout

\begin_layout Standard
We will use (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:saddlepointeGreenself"
plural "false"
caps "false"
noprefix "false"

\end_inset

) to write down the saddle point equations explicitly.
 
\end_layout

\begin_layout Standard
First consider the 
\begin_inset Formula $\lambda$
\end_inset

-field, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial\mathcal{G}^{-1}}{\partial\lambda}=\begin{pmatrix}e^{-i\omega0^{+}}\\
 & e^{i\omega0^{+}}\\
 &  & e^{-i\omega0^{+}}\\
 &  &  & e^{i\omega0^{+}}
\end{pmatrix}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The second term of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:saddlepointeGreenself"
plural "false"
caps "false"
noprefix "false"

\end_inset

) can be calculated as following,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\frac{1}{2}\Tr\bigg[\mathcal{G}^{\text{sp}}\frac{\partial\mathcal{G}^{-1}}{\partial\lambda}\bigg] & =\frac{1}{2}\sum_{\bm{k}}\sum_{\omega}\bigg[-\frac{1}{i\omega-\epsilon_{\bm{k},+}}\bigg(A_{\bm{k},+}e^{-i\omega0^{+}}+E_{\bm{k},+}e^{i\omega0^{+}}+A_{-\bm{k},+}e^{-i\omega0+}+E_{\bm{-k},+}e^{i\omega0^{+}}\bigg)\nonumber \\
 & +\frac{1}{i\omega+\epsilon_{\bm{k},+}}\bigg(E_{\bm{k},+}e^{-i\omega0^{+}}+A_{\bm{k},+}e^{i\omega0^{+}}+E_{-\bm{k},+}e^{-i\omega0+}+A_{\bm{-k},+}e^{i\omega0^{+}}\bigg)\nonumber \\
 & -\frac{1}{i\omega-\epsilon_{\bm{k},-}}\bigg(A_{\bm{k},-}e^{-i\omega0^{+}}+E_{\bm{k},-}e^{i\omega0^{+}}+A_{-\bm{k},-}e^{-i\omega0+}+E_{\bm{-k},-}e^{i\omega0^{+}}\bigg)\nonumber \\
 & +\frac{1}{i\omega+\epsilon_{\bm{k},-}}\bigg(E_{\bm{k},-}e^{-i\omega0^{+}}+A_{\bm{k},-}e^{i\omega0^{+}}+E_{-\bm{k},-}e^{-i\omega0+}+A_{\bm{-k},-}e^{i\omega0^{+}}\bigg)\bigg]\label{eq:lambdasum}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
There are four types of Matsubara sums in (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:lambdasum"
plural "false"
caps "false"
noprefix "false"

\end_inset

).
 This step elucidates the reason to keep the convergence factor: 1.
 the sum diverges without the factor; 2.
 the value of the summation depends on the sign (in the exponential) of
 the factor.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\sum_{\omega}\frac{e^{i\omega0+}}{i\omega-\epsilon} & =-\beta\frac{1}{e^{\beta\epsilon}-1}=-\beta n(\epsilon)\\
\sum_{\omega}\frac{e^{i\omega0+}}{i\omega+\epsilon} & =\beta\big(n(\epsilon)+1\big)\\
\sum_{\omega}\frac{e^{-i\omega0^{+}}}{i\omega-\epsilon} & =-\beta\big(n(\epsilon)+1\big)\\
\sum_{\omega}\frac{e^{-i\omega0+}}{i\omega+\epsilon} & =\beta n(\epsilon)\label{eq:matsums}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Thus (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:lambdasum"
plural "false"
caps "false"
noprefix "false"

\end_inset

) after Matsubara sum is given by
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\frac{1}{2}\Tr\bigg[\mathcal{G}^{\text{sp}}\frac{\partial\mathcal{G}^{-1}}{\partial\lambda}\bigg] & =\beta\sum_{\bm{k}}\bigg((A_{\bm{k},+}+A_{\bm{-k},+})\big(n(\epsilon_{\bm{k},+})+1\big)+(E_{\bm{k},+}+E_{\bm{-k},+})n(\epsilon_{\bm{k},+})\\
 & +(A_{\bm{k},-}+A_{\bm{-k},-})\big(n(\epsilon_{\bm{k},-})+1\big)+(E_{\bm{k},-}+E_{\bm{-k},-})n(\epsilon_{\bm{k},-})\bigg)
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
Consider 
\begin_inset Formula $T=0$
\end_inset

 :
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\lim_{\beta\rightarrow\infty}\beta n(\epsilon)=0
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\lim_{\beta\rightarrow\infty}\frac{1}{2}\Tr\bigg[\mathcal{G}^{\text{sp}}\frac{\partial\mathcal{G}^{-1}}{\partial\lambda}\bigg] & =\beta\sum_{\bm{k}}\bigg(A_{\bm{k},+}+A_{\bm{-k},+}+A_{\bm{k},-}+A_{\bm{-k},-}\bigg)\\
 & =2\beta\sum_{\bm{k}}\sum_{\sigma}A_{\bm{k},\sigma}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\left.\frac{\partial\mathcal{S}_{0}^{(0)}}{\partial\lambda}\right\vert _{\text{sp}}=-2\mathcal{N\beta}S
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The saddle point equation for the 
\begin_inset Formula $\lambda$
\end_inset

-field takes the form
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\boxed{{S=\frac{1}{\mathcal{N}}\sum_{\bm{k}}\sum_{\sigma}A_{\bm{k},\sigma}}}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The derivative of the dynamical matrix with respect to 
\begin_inset Formula $A_{\bm{\bm{\delta}}}$
\end_inset

 is given by 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\frac{\partial\mathcal{G}^{-1}}{\partial A_{\bm{\delta}}}=\begin{pmatrix}A_{11} & 0\\
0 & A_{22}
\end{pmatrix}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
A_{11} & =\begin{pmatrix}0 & -J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)\\
-J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg) & 0
\end{pmatrix}\\
A_{22} & =\begin{pmatrix}0 & -J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)\\
-J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg) & 0
\end{pmatrix}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The second term of (
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:saddlepointeGreenself"
plural "false"
caps "false"
noprefix "false"

\end_inset

) can be calculated as following,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\frac{1}{2}\Tr\bigg[\mathcal{G}^{\text{sp}}\frac{\partial\mathcal{G}^{-1}}{\partial A_{\bm{\delta}}}\bigg] & =-\sum_{\bm{k}}\sum_{\bm{\omega}}\bigg\{-\frac{1}{i\omega-\epsilon_{\bm{k},+}}\bigg[J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{\bm{k},+}+J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{-\bm{k},+}\bigg]\nonumber \\
 & +\frac{1}{i\omega+\epsilon_{\bm{k},+}}\bigg[J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{\bm{k},+}+J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{-\bm{k},+}\bigg]\nonumber \\
 & -\frac{1}{i\omega-\epsilon_{\bm{k},-}}\bigg[J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{\bm{k},-}+J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{-\bm{k},-}\bigg]\nonumber \\
 & +\frac{1}{i\omega+\epsilon_{\bm{k},-}}\bigg[J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{\bm{k},-}+J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{-\bm{k},-}\bigg]\bigg\}\nonumber \\
 & =-\frac{1}{2}\sum_{\bm{k}}\sum_{\bm{\omega}}\bigg\{\bigg[J_{\bm{\delta}}\sin\bigg(\bm{(k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{\bm{k},+}+J_{\bm{\delta}}\sin\bigg(\bm{(-k+\frac{\bm{Q}}{2})}\cdot\bm{\delta}\bigg)C_{-\bm{k},+}\bigg]\bigg(\frac{1}{i\omega+\epsilon_{\bm{k},+}}-\frac{1}{i\omega-\epsilon_{\bm{k},+}}\bigg)\nonumber \\
