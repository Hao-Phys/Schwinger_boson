\begin_layout Standard
Consider 
\begin_inset Formula $\mu=z$
\end_inset

 , 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\sum_{\bm{k}}\sum_{\omega}\Tr\big[\mathcal{G}_{\bm{k},i\omega}\hat{u}^{z}\big] & =\sum_{\bm{k}}\sum_{\omega}\sum_{\sigma}\bigg\{\bigg(\frac{1}{i\omega-\epsilon_{\bm{k},\sigma}}+\frac{1}{i\omega+\epsilon_{\bm{k},\sigma}}\bigg)\big(-A_{\bm{k},\sigma}+A_{-\bm{k},\sigma}+E_{\bm{k},\sigma}-E_{-\bm{k},\sigma}\big)\bigg\}\\
 & =\beta\sum_{\bm{k}}\sum_{\sigma}\big(-A_{\bm{k},\sigma}+A_{-\bm{k},\sigma}+E_{\bm{k},\sigma}-E_{-\bm{k},\sigma}\big)\\
 & =\beta\sum_{\bm{k}}\sum_{\sigma}\big(-A_{\bm{k},\sigma}+A_{\bm{k},\sigma}+E_{\bm{k},\sigma}-E_{\bm{k},\sigma}\big)\\
