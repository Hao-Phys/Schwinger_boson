\begin_layout Standard
The partition function of interacting spins can be expressed as a function
 integral over the boson coherent states,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{Z}=\int D[\bar{b},b]D[\lambda]e^{-\int_{0}^{\beta}d\tau[\sum_{i\alpha}\bar{b}_{i\alpha}^{\tau}\partial_{\tau}b_{i\alpha}^{\tau}+\mathcal{H}(b,\bar{b})]}e^{-i\int_{0}^{\beta}d\tau\lambda_{i}^{\tau}\sum_{i\alpha}(\bar{b}_{i\alpha}^{\tau}b_{i\alpha}^{\tau}-NS)},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where the generalized Hamiltonian is written as, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{H}(\bar{b},b)=\sum_{\langle i,j\rangle}\frac{2J_{ij}}{N}(\bar{B}_{ij}^{\tau}B_{ij}^{\tau}-\bar{A}_{ij}^{\tau}A_{ij}^{\tau}).
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The integration measures are, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
D[\bar{b},b]=\prod_{i,\alpha,\tau}\frac{d\bar{b}_{i\alpha}^{\tau}db_{i\alpha}^{\tau}}{2\pi i},\ \ D[\lambda]=\prod_{i}\frac{d\lambda_{i}^{\tau}}{2\pi}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
To integrate over bosonic variables, we introduce Hubbard-Stratonovich (H-S)
 transformations, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
e^{-\alpha\bar{B}_{ij}^{\tau}B_{ij}}=\int\frac{d\bar{W}_{ij}^{(B)\tau}W_{ij}^{(B)\tau}}{2\pi i/\alpha}e^{-\alpha\bar{W}_{ij}^{(B)\tau}W_{ij}^{(B)\tau}+\alpha(-\bar{W}_{ij}^{(B)\tau}B_{ij}^{\tau}+W_{ij}^{(B)\tau}\bar{B}_{ij}^{\tau})},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
e^{\alpha\bar{A}_{ij}^{\tau}A_{ij}^{\tau}}=\int\frac{d\bar{W}_{ij}^{(A)\tau}W_{ij}^{(A)\tau}}{2\pi i/\alpha}e^{-\alpha\bar{W}_{ij}^{(A)\tau}W_{ij}^{(A)\tau}+\alpha(\bar{W}_{ij}^{(A)\tau}B_{ij}^{\tau}+W_{ij}^{(A)\tau}\bar{B}_{ij}^{\tau})}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The partition function is now quadratic in bosonic variables and can be
 integrated over analytically,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{Z}=\int D[\bar{W},W]D[\lambda]e^{-NS_{\text{eff}}(\bar{W},W,\lambda)},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where the effective action is written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
S_{\text{eff}}(\bar{W},W,\lambda) & =\int_{0}^{\beta}d\tau\bigg(\frac{1}{2J_{ij}}\sum_{r=A,B}\bar{W}_{ij}^{(r)\tau}W_{ij}^{(r)\tau}-iS\sum_{i}\lambda_{i}^{\tau}\bigg)\nonumber \\
 & +\frac{1}{N}\Tr\ln\big[\mathcal{G}^{-1}(\bar{W},W,\lambda)\big].\label{eq:action}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The integration measure for the H-S fields are 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
D[\bar{W},W]=\prod_{i,j,\tau,r}\frac{d\bar{W}_{ij}^{(r)\tau}dW_{ij}^{(r)\tau}}{4\pi iJ_{ij}/N}.
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Saddle point expansion
\end_layout

\begin_layout Standard
By treating 
\begin_inset Formula $N$
\end_inset

 as a large parameter, we can expand the action Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:action"
plural "false"
caps "false"
noprefix "false"

\end_inset

 near its saddle point (SP) 
\begin_inset Formula $\delta S_{\text{eff}}=0$
\end_inset

.
 We see that 
\begin_inset Formula $1/N$
\end_inset

 plays the role of 
\begin_inset Formula $\hbar$
\end_inset

 in a semiclassical expansion.
 The effective action is now written as, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{\text{eff}}=\sum_{n=0}^{\infty}\sum_{\alpha_{1},..,\alpha_{n}}S_{\alpha_{1},...,\alpha_{n}}^{(n)}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
with 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{\alpha_{1},...,\alpha_{n}}^{(n)}=\frac{1}{n!}\frac{\partial^{(n)}S_{\text{eff}}}{\partial\phi_{\alpha_{1}}..\partial\phi_{\alpha_{n}}}\bigg|_{\text{SP}},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
and 
\begin_inset Formula $\Delta\phi_{\alpha}=\phi_{\alpha}-\phi_{\alpha}^{\text{SP}}$
\end_inset

.
 The 
\begin_inset Formula $\alpha$
\end_inset

 index includes gauge fields (
\begin_inset Formula $\bar{W}_{ij}^{(r)\tau},W_{ij}^{(r)\tau},\lambda)$
\end_inset

, space 
\begin_inset Formula $i$
\end_inset

, and time 
\begin_inset Formula $\tau$
\end_inset

.
 Expansion the first line of Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:action"
plural "false"
caps "false"
noprefix "false"

\end_inset

 is straightforward, as for the second line, notice that, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\Tr\ln\big[\mathcal{G}^{-1}(\bar{W},W,\lambda)\big] & =\Tr\ln\big[\mathcal{G}_{\text{SP}}^{-1}\big(1+\mathcal{G}_{\text{SP}}(\mathcal{G}^{-1}-\mathcal{G}_{\text{SP}}^{-1})\big)\big]\nonumber \\
 & =\Tr\ln\big[\mathcal{G}_{\text{SP}}^{-1}\big(1+\mathcal{G}_{\text{SP}}\sum_{\alpha}\Delta\phi v_{\alpha}\big)\big],
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where we have defined the so-called internal vertex, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
(\mathcal{G}^{-1}-\mathcal{G}_{\text{SP}}^{-1})=\sum_{\alpha}\Delta\phi\frac{\partial\mathcal{G}^{-1}}{\partial\phi}\equiv\sum_{\alpha}\Delta\phi v_{\alpha}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
This definition is valid because the boson Green function is linear in the
 gauge fields.
 We can further exploit the properties of trace logarithm of a matrix, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\Tr\ln\big[\mathcal{G}_{\text{SP}}^{-1}\big(1+\mathcal{G}_{\text{SP}}\sum_{\alpha}\Delta\phi v_{\alpha}\big)\big] & =\Tr\ln\mathcal{G}_{\text{SP}}^{-1}+\Tr\ln\big(1+\mathcal{G}_{\text{SP}}\sum_{\alpha}\Delta\phi v_{\alpha}\big)\nonumber \\
 & =\Tr\ln\mathcal{G}_{\text{SP}}^{-1}+\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n}\Tr\big(\mathcal{G}_{\text{SP}}\sum_{\alpha}\Delta\phi v_{\alpha}\big)^{n}\nonumber \\
 & =\Tr\ln\mathcal{G}_{\text{SP}}^{-1}+\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n}\sum_{\alpha_{1},...,\alpha_{n}}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}}\Tr\big(\mathcal{G}_{\text{SP}}v_{\alpha_{1}}...\mathcal{G}_{\text{SP}}v_{\alpha_{n}}\big).\label{eq:internal_expansion}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Using this result, it's straightforward to show that, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
S^{(0)} & =S_{\text{SP}}^{\text{eff}}=\int_{0}^{\beta}d\tau\bigg(\frac{1}{2J_{ij}}\sum_{r=A,B}\bar{W}_{ij}^{(r)\tau}W_{ij}^{(r)\tau}-iS\sum_{i}\lambda_{i}^{\tau}\bigg)\bigg|_{\text{SP}}\nonumber \\
 & +\frac{1}{N}\Tr\ln\mathcal{G}_{\text{SP}}^{-1},
\end{align}

\end_inset


\begin_inset Formula 
\begin{align}
S_{\alpha}^{(1)} & =\frac{\partial}{\partial\phi_{\alpha}}\bigg[\int_{0}^{\beta}d\tau\bigg(\frac{1}{2J_{ij}}\sum_{r=A,B}\bar{W}_{ij}^{(r)\tau}W_{ij}^{(r)\tau}-iS\sum_{i}\lambda_{i}^{\tau}\bigg)\bigg]\bigg|_{\text{SP}}\nonumber \\
 & +\frac{1}{N}\Tr\big(\mathcal{G}_{\text{SP}}v_{\alpha}),
\end{align}

\end_inset


\end_layout

\begin_layout Standard
and
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
S_{\alpha\alpha'}^{(2)} & =\frac{1}{4J_{ij}}\big(\delta_{\alpha,\bar{W}_{ij}^{(r)\tau}}\delta_{\alpha',W_{ij}^{(r)\tau}}+\delta_{\alpha,W_{ij}^{(r)\tau}}\delta_{\alpha',\bar{W}_{ij}^{(r)\tau}}\big)\\
 & -\frac{1}{2N}\Tr\big(\mathcal{G}_{\text{SP}}v_{\alpha}\mathcal{G}_{\text{SP}}v_{\alpha'}\big).
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Finally, the interacting part is written as, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{\alpha_{1},...,\alpha_{n}}^{(n\geq3)}=\frac{(-1)^{n+1}}{n!n}\sum_{P(\alpha_{1},...\alpha_{n})}\frac{1}{N}\Tr\big(\mathcal{G}_{\text{SP}}v_{\alpha_{1}}...\mathcal{G}_{\text{SP}}v_{\alpha_{n}}\big),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $P(\alpha_{1},...\alpha_{n})$
\end_inset

 is the permutation of 
\begin_inset Formula $n$
\end_inset

 gauge fields.
 The effective action is now written as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{\text{eff}}=S_{\text{eff}}^{\text{SP}}+\sum_{\alpha_{1}\alpha_{2}}S_{\alpha_{1}\alpha_{2}}^{(2)}\Delta\phi_{1}\Delta\phi_{2}+S_{\text{int}},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
with 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
S_{\text{int}}=\sum_{n=3}^{\infty}\sum_{\alpha_{1},...\alpha_{n}}S_{\alpha_{1},...,\alpha_{n}}^{(n)}\Delta\phi_{\alpha_{1}}...\Delta\phi_{\alpha_{n}}.\label{eq:S_int}
\end{equation}

\end_inset


\end_layout

\begin_layout Subsection
Dynamical spin susceptibility
\end_layout

\begin_layout Standard
Consider a subgroup of SU(
\begin_inset Formula $N$
\end_inset

) group, the SP(
\begin_inset Formula $N$
\end_inset

) group, whose generators break the time-reversal invariance, and can be
 written as, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{S}_{\alpha\beta}=b_{\alpha}^{\dagger}b_{\beta}-\text{sgn}\alpha\text{sgn}\beta b_{-\beta}^{\dagger}b_{-\alpha}^{\dagger},\label{eq:spngen}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $\alpha,\beta=\{-N/2,...,N/2\}$
\end_inset

.
 [The reasons for considering only the SP(
\begin_inset Formula $N$
\end_inset

) generators (symplectic spins) need to be clarified].
 The computation of the dynamical spin susceptibility requires the coupling
 of the generators defined in Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:spngen"
plural "false"
caps "false"
noprefix "false"

\end_inset

 with space- and time- dependent external sources 
\begin_inset Formula $j_{i\alpha\beta}^{\tau}$
\end_inset

, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\mathcal{J}_{s}=\sum_{i}j_{i\alpha\beta}^{\tau}\mathcal{S}_{\alpha\beta}^{\tau}(i),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where the sum over repeated flavor indices is assumed, then 
\begin_inset Formula $\mathcal{Z}\rightarrow\mathcal{Z}[j]$
\end_inset

.
 The imaginary time 
\emph on
dynamical spin susceptibility
\emph default
 is defined as, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}(1,2)=\frac{\partial^{2}\ln\mathcal{Z}[j]}{\partial j_{1\alpha\beta}^{\tau}\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}.\label{eq:chi}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
The above definition makes sense because 
\begin_inset Formula $F\sim-\ln\mathcal{Z}$
\end_inset

, and 
\begin_inset Formula $\chi=-\partial^{2}F/\partial B^{2}$
\end_inset

 .
 It is easy to check that 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:chi"
plural "false"
caps "false"
noprefix "false"

\end_inset

 can be brought into two parts, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}(1,2)=\chi_{\alpha\beta}^{(\text{1})}(1,2)+\chi_{\alpha\beta}^{(2)}(1,2),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
where 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align*}
\chi_{\alpha\beta}^{(\text{1})}(1,2) & =\frac{1}{\mathcal{Z}}\frac{\partial^{2}\mathcal{Z}}{\partial j_{1\alpha\beta}^{\tau}\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}\\
 & =\frac{1}{\mathcal{Z}}\bigg(-N\int D[\bar{\phi},\phi]\frac{\partial^{2}S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}\partial j_{2\beta\alpha}^{0}}e^{-NS_{\text{eff}}}+N^{2}\int D[\bar{\phi},\phi]\frac{\partial S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}}\frac{\partial S_{\text{eff}}}{\partial j_{2\beta\alpha}^{0}}e^{-NS_{\text{eff}}}\bigg)\bigg|_{j=0},
\end{align*}

\end_inset


\end_layout

\begin_layout Standard
and 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\chi_{\alpha\beta}^{(2)}(1,2) & =-\frac{1}{\mathcal{Z}^{2}}\frac{\partial\mathcal{Z}}{\partial j_{1\alpha\beta}^{\tau}}\frac{\partial\mathcal{Z}}{\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}\\
 & =-\frac{N^{2}}{\mathcal{Z}^{2}}\bigg[\bigg(\int D[\bar{\phi},\phi]\frac{\partial S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}}e^{-NS_{\text{eff}}}\bigg)\bigg(\int D[\bar{\phi},\phi]\frac{\partial S_{\text{eff}}}{\partial j_{2\beta\alpha}^{0}}e^{-NS_{\text{eff}}}\bigg)\bigg]\bigg|_{j=0}.
\end{align}

\end_inset


\end_layout

\begin_layout Standard
The term 
\begin_inset Formula $\chi_{\alpha\beta}^{(2)}(1,2)$
\end_inset

 corresponds to a product of the expectation values of two symplectic spins
 
\begin_inset Formula $\langle\mathcal{S}_{\alpha\beta}^{\tau}(1)\rangle\langle\mathcal{S}_{\beta\alpha}^{0}(2)\rangle$
\end_inset

, which are not dynamical, therefore will be neglected in the following
 calculations.
 The term of interest 
\begin_inset Formula $\chi_{\alpha\beta}^{(\text{1})}(1,2)$
\end_inset

 can be further written in two parts
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}^{(\text{1})}(1,2)=\chi_{\alpha\beta}^{(\text{I})}(1,2)+\chi_{\alpha\beta}^{(\text{II})}(1,2),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
with 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}^{(\text{I})}(1,2)=-\frac{N}{\mathcal{Z}}\int D[\bar{\phi},\phi]\bigg(\frac{\partial^{2}S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}e^{-NS_{\text{eff}}[j=0]}\bigg),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
and 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}^{(\text{II})}(1,2)=\frac{N^{2}}{\mathcal{Z}}\int D[\bar{\phi},\phi]\bigg(\frac{\partial S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}}\bigg|_{j=0}\frac{\partial S_{\text{eff}}}{\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}e^{-NS_{\text{eff}}[j=0]}\bigg).
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Keep in mind that the external sources only couple with Schwinger bosons,
 therefore only the last term of Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:action"
plural "false"
caps "false"
noprefix "false"

\end_inset

 contributes to the derivative of 
\begin_inset Formula $S_{\text{eff}}$
\end_inset

 with respect to 
\begin_inset Formula $j$
\end_inset

.
 Let's first expand this term in series of 
\begin_inset Formula $j$
\end_inset

, following the same steps as Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:internal_expansion"
plural "false"
caps "false"
noprefix "false"

\end_inset

, we have
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\Tr\ln\big[\mathcal{G}^{-1}(\bar{\phi},\phi,j)\big] & =\Tr\ln\big[\mathcal{G}^{-1}[j=0]\big(1+\mathcal{G}[j=0](\mathcal{G}^{-1}(\bar{\phi},\phi,j)-\mathcal{G}^{-1}[j=0])\big]\nonumber \\
 & =\Tr\ln\big[\mathcal{G}^{-1}[j=0]\big]+\sum_{n=1}^{\infty}\frac{(-1)^{n+1}}{n}\sum_{\mu_{1},...,\mu_{n}}\sum_{\nu_{1},...,\nu_{n}}j_{1\mu_{1}\nu_{1}}...j_{n\mu_{n}\nu_{n}}\Tr\big(\mathcal{G}[j=0]u^{\mu_{1}\nu_{1}}(1)...\mathcal{G}[j=0]u^{\mu_{n}\nu_{n}}(n)\big),\label{eq:gen_log}
\end{align}

\end_inset


\end_layout

\begin_layout Standard
where 
\begin_inset Formula $u^{\mu_{i}\nu_{i}}$
\end_inset

 are the so-called external vertices defined as
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
u^{\mu_{i}\nu_{i}}(i)\equiv\frac{\partial\mathcal{G}^{-1}}{\partial j_{i\mu_{i}\nu_{i}}}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Taking derivatives on Eq.
 
\begin_inset CommandInset ref
LatexCommand eqref
reference "eq:gen_log"
plural "false"
caps "false"
noprefix "false"

\end_inset

, we have
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
N\frac{\partial^{2}S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}\partial j_{2\beta\alpha}^{0}}\bigg|_{j=0}=-\Tr\big(\mathcal{G}[j=0]u^{\alpha\beta}(\tau;1)\mathcal{G}[j=0]u^{\beta\alpha}(0;2)\big),
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
N\frac{\partial S_{\text{eff}}}{\partial j_{1\alpha\beta}^{\tau}}\bigg|_{j=0}=\Tr\big(\mathcal{G}[j=0]u^{\alpha\beta}(\tau;1)\big).
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
Note that there are actually two repeated terms for the second derivatives,
 which cancel the factor 2 in the denominator.
 Therefore, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}^{(\text{I})}(1,2)=\frac{1}{\mathcal{Z}}\int D[\bar{\phi},\phi]\Tr\big(\mathcal{G}[j=0]u^{\alpha\beta}(\tau;1)\mathcal{G}[j=0]u^{\beta\alpha}(0;2)\big)e^{-NS_{\text{eff}}[j=0]},
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
\chi_{\alpha\beta}^{(\text{II})}(1,2)=\frac{1}{\mathcal{Z}}\int D[\bar{\phi},\phi]\Tr\big(\mathcal{G}[j=0]u^{\alpha\beta}(\tau;1)\big)\Tr\big(\mathcal{G}[j=0]u^{\beta\alpha}(0;2)\big)e^{-NS_{\text{eff}}[j=0]}.
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
We further notice that,
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\mathcal{G}[j=0] & =\mathcal{G}_{\text{SP}}[j=0]\big(1+\mathcal{G}_{\text{SP}}[j=0]\sum_{\alpha}\Delta\phi_{\alpha}v_{\alpha}\big)^{-1}\nonumber \\
 & =\mathcal{G}_{\text{SP}}[j=0]\sum_{n=0}^{\infty}(-1)^{n}\big[\mathcal{G}_{\text{SP}}[j=0]\sum_{\alpha}\Delta\phi_{\alpha}v_{\alpha}\big]^{n}.
\end{align}

\end_inset


\end_layout

\begin_layout Standard
Finally, 
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{align}
\chi_{\alpha\beta}^{(\text{I})}(1,2) & =\frac{1}{\mathcal{Z}}\int D[\bar{\phi},\phi]\Tr\big[\mathcal{G}_{\text{SP}}\sum_{m=0}^{\infty}\big(\sum_{\alpha}\Delta\phi_{\alpha}v_{\alpha}\mathcal{G}_{\text{SP}}\big)^{m}u^{\alpha\beta}(\tau;1)\mathcal{G}_{\text{SP}}\sum_{m'=0}^{\infty}\big(\sum_{\alpha}\Delta\phi_{\alpha}v_{\alpha}\mathcal{G}_{\text{SP}}\big)^{m'}u^{\beta\alpha}(0;2)\big]\nonumber \\
